<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>


    </style>
    <style name="FBButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#6995F2</item>
        <item name="colorButtonNormal">#3b5998</item>


    </style>
    <style name="GoogleButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#EF6F63</item>
        <item name="colorButtonNormal">#DD4E41</item>


    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
